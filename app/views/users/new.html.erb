<div class="container">
  <div class="row">
    <h1>Sign Up For An Account</h1><br>
    <%= form_for @user do |f| %>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :about_me %>
        <%= f.text_field :about_me, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <h3>Please enter your phone number in the format: <strong>5551119999</strong> -- no spaces, no dashes, no parentheses</h3>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %><br>
      </div>

      <%= f.submit "Create Account", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
