        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
											<h3> Reservation ID: <%= @reservation.id %> </h3>
                        <div class="card">
                            <div class="header dates">
                                <h5 class="title">Check-in<span class="pull-right">Check-out</span></h5>
																<h4><strong><%= @reservation.start_date.month %>-<%= @reservation.start_date.day %>-<%= @reservation.start_date.year %>
																						<span class="pull-right"> <%= @reservation.end_date.month %>-<%= @reservation.end_date.day %>-<%= @reservation.end_date.year %></strong></h4>
                                              <h5>Status: <%= @reservation.status %></h5>
                            </div>
														<hr>
														<div class="header listing">
                              <h3><%= link_to @reservation.listing.title, listing_path(@reservation.listing) %></h3>
                              <h3><%= @reservation.listing.street_address %> <%= @reservation.listing.city %></h3>
															<h4><strong> <%= @reservation.listing.list_category %></strong></h4>
														</div>
														<div class="header">
															<p> <%= @reservation.listing.description %></p>
														</div>
														<div class="header">
															<p> Hosted by: <%= @reservation.listing.user.first_name %> <%= @reservation.listing.user.last_name %></p>
															<p>Phone: <%= @reservation.listing.user.phone_number %></p>
                              <%= link_to "Message #{@reservation.listing.user.first_name}", conversations_path(initiator_id: current_user.id, recipient_id: @reservation.listing.user_id), method: :post, class: "btn btn-success" %>
                            </div>
														<hr>
                        </div>
                    </div>

                    <div class="col-md-8">
											<h3> <%= @reservation.num_nights %> nights in <%= @reservation.listing.city %></h3>
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Charges</h4>
                            </div>
                            <div class="content charges">
                              <p> $<%= @reservation.unit_cost %>/night x <%= @reservation.num_nights %> nights
                                <span class="pull-right">$<%= @reservation.total_cost %></span>
                               </p>
																<hr>
																<h4 id="total">Total Price: <span class="pull-right">$<%= @reservation.total_cost %></span></h4>
                            </div>
                        </div>
                    </div>
                	</div>
                </div>
            </div>
</body>

