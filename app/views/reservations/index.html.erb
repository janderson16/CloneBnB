<%= render partial: "shared/sidebar" %>
    <div class="main-panel">
      <div class="content">
        <div class="container-fluid">
            <div class="row">
              <div class="col-md-7">
                <h1>Reservations</h1>
                <div class="card">
                  <div class="content ">
                    <h1>Reservations</h1>
                    <hr>

                    <table>
                      <tr>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Status</th>
                        <th>Action</th>
                      </tr>
                      <tbody>
                    <div class="all_listings">
                        <% @listings.each do |listing| %>
                          <% listing.reservations.each do |reservation| %>
                            <tr class="reservation-<%= "#{reservation.id}" %>">
