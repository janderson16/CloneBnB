<div class="wrapper">
<%= render partial: "shared/sidebar" %>
    <div class="main-panel">
      <div class="content">
        <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">

                <div class="card">
                  <div class="header">
                    <h1>Reservations</h1>
                    <hr>
                    <table class="content table table-striped">
                      <thead class="headers">
                        <tr>
                          <th>Start Date</th>
                          <th>End Date</th>
                          <th>First Name</th>
                          <th>Last Name</th>
                          <th>Email</th>
                          <th>Phone Number</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody class="records all_listings">
                        <% @listings.each do |listing| %>
                          <% listing.reservations.each do |reservation| %>
                            <tr class="reservation-<%= "#{reservation.id}" %>" scope="row">
                              <td><%= reservation.start_date %></td>
                              <td><%= reservation.end_date %></td>
                              <td><%= reservation.user.first_name %></td>
                              <td><%= reservation.user.last_name %></td>
                              <td><%= reservation.user.email %></td>
                              <td><%= reservation.user.phone_number %></td>
                              <td><%= reservation.status %></td>
