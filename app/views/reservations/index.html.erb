                              <td>
                                <%= button_to "Confirm", user_reservation_path(current_user, reservation, status: "confirmed"), method: :put, class: "btn btn-success" %>
                                <%= button_to "Cancel", user_reservation_path(current_user, reservation, status: "cancelled"), method: :put, class: "btn btn-success"%>
                              </td>
                              <% elsif reservation.status == "confirmed" %>
                              <td>
                                <%= button_to "Cancel", user_reservation_path(current_user, reservation, status: "cancelled"), method: :put, class: "btn btn-success" %>
                                <%= button_to "Complete", user_reservation_path(current_user, reservation, status: "complete"), method: :put, class: "btn btn-success" %>
                              </td>
                            <% end %>
                            </tr>
                          <% end %>
                      <% end %>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
